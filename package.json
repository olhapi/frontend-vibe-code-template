{
    "name": "frontend-vibe-code-template",
    "private": false,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "build": "tsc -b && vite build",
        "lint": "biome lint src/**/*",
        "check": "biome check src/**/*",
        "check:fix": "npm run check --write",
        "format": "biome format --write src/**/*",
        "preview": "vite preview",
        "storybook:run": "storybook dev -p 6006",
        "storybook:build": "storybook build",
        "build-storybook": "npm run storybook:build",
        "start": "vite",
        "update-structure": "repomix",
        "prepare": "husky",
        "test": "vitest run",
        "test:unit": "vitest run --project=unit",
        "test:storybook": "vitest run --project=storybook",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "chromatic": "npx chromatic --exit-once-uploaded"
    },
    "dependencies": {
        "react": "^19.1.0",
        "react-dom": "^19.1.0"
    },
    "devDependencies": {
        "@biomejs/biome": "2.0.6",
        "@chromatic-com/storybook": "^4.0.1",
        "@storybook/addon-links": "^9.0.16",
        "@storybook/addon-vitest": "^9.0.16",
        "@storybook/react-vite": "^9.0.16",
        "@types/node": "^24.0.7",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "@vitejs/plugin-react": "^4.5.2",
        "@vitest/browser": "^3.2.4",
        "@vitest/coverage-v8": "3.2.4",
        "chromatic": "^13.1.2",
        "concurrently": "^9.2.0",
        "globals": "^16.2.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.2",
        "playwright": "^1.53.2",
        "repomix": "^1.1.0",
        "typescript": "~5.8.3",
        "ultracite": "5.0.32",
        "vite": "^7.0.0",
        "vitest": "^3.2.4",
        "vitest-browser-react": "^1.0.0"
    }
}
